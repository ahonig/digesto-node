<%- include ('partials/_header'); %>
<%- include ('partials/_navMenu'); %>
<%- include ('partials/_bodyUpper'); %>	
<div id="content">
	<div class="row">
		<div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
			<h1 class="page-title txt-color-blueDark">
				<i class="fa fa-fw fa-user"></i> 
					Configuracion 
				<span>> 
					Eliminar Texto
				</span>
			</h1>
		</div>
    </div>
    
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-plus"></i> </span>
                        <h2>Complete el formulario </h2>				
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <form id="deleteText-form" class="smart-form" novalidate="novalidate" method="POST">
                                <fieldset>
                                    <section>
                                        <label class="input">
                                            <input type="text" name="text_codigo" placeholder="Usuario" value="<%= texto.text_codigo %>" readonly>
                                            <b class="tooltip tooltip-bottom-right">Ingrese su texto</b> </label>
                                    </section>
                                    <section>
                                        <label class="input">
                                            <input type="text" name="text_nombre" placeholder="Descripcion completo" value="<%= texto.text_descripcion %>" readonly>
                                            <b class="tooltip tooltip-bottom-right">Ingrese su nombre</b> </label>
                                    </section>

                                    <div class="row">
                                        <section class="col col-8">
											<select name="text_codigo_padre" class="select2">
                                                <% if ( !texto.text_codigo_padre ) { %>
                                                <option value="" >Seleccione una Categoria</option>
												<% } else {
                                                    for(var i =0; i < textos.length; i++){ %>
													<option value="<%= textos[i].text_codigo %>" <%= (texto.text_codigo_padre == textos[i].text_codigo ? 'selected="selected"' : '') %></option><%= textos[i].text_codigo %> - <%= textos[i].text_descripcion %></option>	
                                                <% }
                                                } %>
											</select> <i></i>
                                        </section>
                                    </div>
                                <footer>
                                    <button type="submit" class="btn btn-danger">
                                        Eliminar
                                    </button>
                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
<%- include ('partials/_bodyBottom'); %>	
<script src="/js/plugin/select2/select2.min.js"></script>
<script>
	$(document).ready(function() {
	
	
		pageSetUp();
        
		
	
	});
	
</script>
<%- include ('partials/_footer'); %>
